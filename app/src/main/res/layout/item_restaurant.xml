<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/restaurant_iv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/restaurant_image_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/restaurant_image_bg"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:paddingRight="5dp"
        android:background="@drawable/restaurant_stars_bg"
        app:layout_constraintTop_toTopOf="@id/restaurant_iv"
        app:layout_constraintLeft_toLeftOf="@id/restaurant_iv">

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/rating_single_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="1"
            android:stepSize="0.5"
            android:clickable="false"
            android:rating="1"
            android:progressTint="@color/white"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:theme="@style/Widget.AppCompat.RatingBar"
            />
        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="9.8"
            android:fontFamily="@font/poppins_regular"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/restaurant_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joes PizzerÃ­a"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:fontFamily="@font/poppins_regular"
        android:textSize="24sp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/restaurant_iv"
        app:layout_constraintLeft_toLeftOf="@id/restaurant_iv"
        />
    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:clickable="false"
        android:progressTint="@color/rating_selected_tint"
        android:progressBackgroundTint="@color/rating_unselected_tint"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:theme="@style/Widget.AppCompat.RatingBar"
        app:layout_constraintTop_toBottomOf="@id/restaurant_name_tv"
        app:layout_constraintLeft_toLeftOf="@id/restaurant_name_tv"
        />
    <TextView
        android:id="@+id/reviews_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="84 Reviews"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:textColor="@color/reviews_text"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/rating_bar"
        app:layout_constraintBottom_toBottomOf="@id/rating_bar"
        />
</androidx.constraintlayout.widget.ConstraintLayout>